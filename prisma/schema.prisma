// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model Event {
  id          String   @id @default(cuid())
  name        String
  description String?  @db.Text
  startDate   DateTime @map("start_date")
  endDate     DateTime? @map("end_date")
  location    String
  address     String
  latitude    Float?
  longitude   Float?
  website     String?
  source      String?
  createdAt   DateTime @default(now()) @map("created_at")
  updatedAt   DateTime @updatedAt @map("updated_at")

  @@index([startDate])
  @@index([location])
  @@index([createdAt])
  @@map("events")
}

model Shop {
  id          String   @id @default(cuid())
  name        String
  description String?  @db.Text
  address     String
  city        String
  postcode    String
  latitude    Float?
  longitude   Float?
  website     String?
  phone       String?
  source      String?
  createdAt   DateTime @default(now()) @map("created_at")
  updatedAt   DateTime @updatedAt @map("updated_at")

  @@index([city])
  @@index([postcode])
  @@index([createdAt])
  @@map("shops")
}

model Report {
  id            String   @id @default(cuid())
  entityType    String   @map("entity_type")
  entityId      String   @map("entity_id")
  issueType     String   @map("issue_type")
  description   String?  @db.Text
  reporterEmail String?  @map("reporter_email")
  status        String   @default("pending")
  createdAt     DateTime @default(now()) @map("created_at")

  @@index([status])
  @@index([createdAt])
  @@map("reports")
}

model AuditLog {
  id         String   @id @default(cuid())
  action     String
  userId     String?  @map("user_id")
  resourceId String?  @map("resource_id")
  metadata   Json?
  ipAddress  String?  @map("ip_address")
  timestamp  DateTime @default(now())

  @@index([action])
  @@index([timestamp])
  @@map("audit_logs")
}

model Submission {
  id            String   @id @default(cuid())
  entityType    String   @map("entity_type") // 'Event' or 'Shop'
  status        String   @default("pending") // 'pending', 'approved', 'rejected'
  
  // Event fields
  name          String
  description   String?  @db.Text
  startDate     DateTime? @map("start_date")
  endDate       DateTime? @map("end_date")
  location      String?
  address       String
  city          String?
  postcode      String?
  latitude      Float?
  longitude     Float?
  website       String?
  phone         String?
  
  // Submitter info
  submitterEmail String? @map("submitter_email")
  submitterName  String? @map("submitter_name")
  notes          String? @db.Text
  
  // Admin fields
  reviewedBy    String?  @map("reviewed_by")
  reviewedAt    DateTime? @map("reviewed_at")
  rejectionReason String? @map("rejection_reason") @db.Text
  
  createdAt     DateTime @default(now()) @map("created_at")
  updatedAt     DateTime @updatedAt @map("updated_at")

  @@index([status])
  @@index([entityType])
  @@index([createdAt])
  @@map("submissions")
}

